<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".activitys.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="617dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/rounded_retangle_white"
        android:elevation="10dp"
        android:foregroundGravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:text="Registre-se"
            android:textAlignment="center"
            android:textColor="#1C1C1C"
            android:textSize="34sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/nameEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#0000C4FF"
                android:ems="10"
                android:hint="Nome completo"
                android:inputType="text|textPersonName"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/cpfEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#0000C4FF"
                android:ems="10"
                android:hint="CPF (000.000.000-00)"
                android:inputType="text"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/birthEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#0000C4FF"
                android:ems="10"
                android:hint="Data de nascimento (dd/mm/aaaa)"
                android:inputType="datetime|date"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/crmEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#0000C4FF"
                android:ems="10"
                android:hint="CRM (00000-00)"
                android:inputType="text"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/emailEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#0000C4FF"
                android:ems="10"
                android:hint="Endereço de e-mail"
                android:inputType="textEmailAddress"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/userEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#0000C4FF"
                android:ems="10"
                android:hint="Nome de usuário"
                android:inputType="text|textPersonName"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edit_text_background"
            android:elevation="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/passwordEdit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:backgroundTint="#00FFFFFF"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:textColor="#222222"
                android:textColorHighlight="#00B7FF"
                android:textColorHint="#656565"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/alertText"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/alert_text_background"
            android:enabled="false"
            android:gravity="center"
            android:textColor="#F10000"
            android:visibility="gone" />

        <Button
            android:id="@+id/registerButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/send_button_background"
            android:elevation="10dp"
            android:text="Registrar-se"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/cancel_button_background"
            android:elevation="10dp"
            android:text="Cancelar"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#FFFFFF"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>